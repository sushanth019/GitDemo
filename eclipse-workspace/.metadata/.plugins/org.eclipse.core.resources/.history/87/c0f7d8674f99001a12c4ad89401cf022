		delay();
		driver.findElement(By.xpath("//*[@id=\"reviewid\"]/i[2]")).click();
		delay();
		driver.findElement(By.xpath("//*[@id=\"contact\"]/div[2]/div/div[2]/div[3]/a[1]")).click();
		delay();
		driver.findElement(By.xpath("//*[@id=\"contact\"]/div[2]/div/div[2]/div[3]/a[2]")).click();
